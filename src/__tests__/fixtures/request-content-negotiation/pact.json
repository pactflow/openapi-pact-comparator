{
  "consumer": { "name": "consumer" },
  "provider": { "name": "provider" },
  "interactions": [
    {
      "description": "should pass to match first compatible content-type in spec",
      "request": {
        "method": "POST",
        "path": "/animals",
        "headers": {
          "content-type": "application/json"
        },
        "body": {
          "name": "Rover",
          "genus": "Canis"
        }
      },
      "response": {
        "status": 201
      }
    },
    {
      "description": "should pass to match v1 in spec",
      "request": {
        "method": "POST",
        "path": "/animals",
        "headers": {
          "content-type": "application/json;version=1.0.0"
        },
        "body": {
          "name": "Rover",
          "genus": "Canis"
        }
      },
      "response": {
        "status": 201
      }
    },
    {
      "description": "should pass to match v2 in spec",
      "request": {
        "method": "POST",
        "path": "/animals",
        "headers": {
          "content-type": "application/json;version=2.0.0"
        },
        "body": {
          "name": "Rover",
          "species": "C. familiaris"
        }
      },
      "response": {
        "status": 201
      }
    },
    {
      "description": "should error when unable to match content-type",
      "request": {
        "method": "POST",
        "path": "/animals",
        "headers": {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        "body": "name=Rover&genus=Canis"
      },
      "response": {
        "status": 201
      }
    },
    {
      "description": "should error on missing content-type",
      "request": {
        "method": "POST",
        "path": "/animals",
        "headers": {},
        "body": {
          "name": "Rover",
          "genus": "Canis"
        }
      },
      "response": {
        "status": 201
      }
    }
  ]
}
