{
  "consumer": { "name": "consumer" },
  "provider": { "name": "provider" },
  "interactions": [
    {
      "description": "should pass when json body matches spec",
      "request": {
        "method": "POST",
        "path": "/login",
        "query": "account=foo&nested=bar",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "bob"
        }
      },
      "response": {
        "status": 201,
        "body": {
          "id": "123"
        }
      }
    },
    {
      "description": "should fail with missing parameters",
      "request": {
        "method": "POST",
        "path": "/login",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "bob"
        }
      },
      "response": {
        "status": 201,
        "body": {
          "id": "123"
        }
      }
    },
    {
      "description": "should fail with bad request body",
      "request": {
        "method": "POST",
        "path": "/login",
        "query": "account=foo&nested=bar",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {}
      },
      "response": {
        "status": 201,
        "body": {
          "id": "123"
        }
      }
    },
    {
      "description": "should fail with bad response body",
      "request": {
        "method": "POST",
        "path": "/login",
        "query": "account=foo&nested=bar",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "bob"
        }
      },
      "response": {
        "status": 201,
        "body": {
          "username": "bob"
        }
      }
    },
    {
      "description": "should error (but not crash) for wildcard routes",
      "request": {
        "method": "GET",
        "path": "/wildcards/foo"
      },
      "response": {
        "status": 200
      }
    }
  ]
}
