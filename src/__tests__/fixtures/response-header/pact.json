{
  "consumer": { "name": "consumer" },
  "provider": { "name": "provider" },
  "interactions": [
    {
      "description": "should pass with successful headers",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "description": "should pass about specified standard http response header",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 200,
        "headers": {
          "Access-Control-Allow-Origin": "*",
          "Content-Type": "application/json"
        }
      }
    },
    {
      "description": "should pass with 204 status, ignoring content-length and content-type",
      "request": {
        "method": "DELETE",
        "path": "/delete"
      },
      "response": {
        "status": 204,
        "headers": {
          "content-length": "0",
          "content-type": "text/plain"
        }
      }
    },
    {
      "description": "should warn about missing standard response headers",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 200,
        "headers": {
          "age": "60",
          "Content-Type": "application/json"
        }
      }
    },
    {
      "description": "should error on incompatible response headers",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json",
          "specified": "abc"
        }
      }
    },
    {
      "description": "should error on unspecified response headers",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json",
          "unspecified": "foo"
        }
      }
    },
    {
      "description": "should error on unknown response content type, per status code",
      "request": {
        "method": "GET",
        "path": "/different-response-types"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "text/html"
        }
      }
    },
    {
      "description": "should not check for response headers issues if OAS doesn't define it",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 400,
        "headers": {
          "Connection": "close"
        }
      }
    },
    {
      "description": "should not warn about response.content-type.unknown",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 400,
        "headers": {
          "Content-Type": "application/json"
        }
      }
    }
  ]
}
