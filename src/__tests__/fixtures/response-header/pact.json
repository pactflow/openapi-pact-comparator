{
  "consumer": { "name": "consumer" },
  "provider": { "name": "provider" },
  "interactions": [
    {
      "description": "should pass with successful headers",
      "providerState": "",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "description": "should warn about missing standard response headers",
      "providerState": "",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 200,
        "headers": {
          "age": "60",
          "Content-Type": "application/json"
        }
      }
    },
    {
      "description": "should error on incompatible response headers",
      "providerState": "",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json",
          "specified": "abc"
        }
      }
    },
    {
      "description": "should error on unspecified response headers",
      "providerState": "",
      "request": {
        "method": "GET",
        "path": "/path"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json",
          "unspecified": "foo"
        }
      }
    },
    {
      "description": "should error on unknown response content type",
      "providerState": "",
      "request": {
        "method": "GET",
        "path": "/different-response-types"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "text/html"
        }
      }
    }
  ]
}
