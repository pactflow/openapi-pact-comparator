{
  "consumer": { "name": "consumer" },
  "provider": { "name": "provider" },
  "interactions": [
    {
      "description": "should pass with valid response",
      "request": {
        "method": "GET",
        "path": "/animal"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "name": "name",
          "detail": {
            "foo": "bar",
            "bar": false,
            "baz": 1,
            "bat": [
              true,
              "string",
              1,
              {
                "foo": "bar",
                "bar": false,
                "baz": 1,
                "bat": ["you get the idea..."],
                "qix": null
              }
            ],
            "qix": null
          }
        }
      }
    },
    {
      "description": "should pass with binary content",
      "request": {
        "headers": {
          "Accept": "image/png"
        },
        "method": "GET",
        "path": "/binary"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "image/png"
        },
        "body": "some base64 encoded body (this is the format pact uses, which various across spec versions)"
      }
    },
    {
      "description": "should pass on pet type dog",
      "request": {
        "method": "GET",
        "path": "/pet"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "petType": "Dog",
          "name": "Doggy",
          "bark": true,
          "breed": "Dingo"
        }
      }
    },
    {
      "description": "should pass on pet type cat",
      "request": {
        "method": "GET",
        "path": "/pet"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "petType": "Cat",
          "name": "Kitty",
          "hunts": true,
          "age": 6
        }
      }
    },
    {
      "description": "should error on unknown pet",
      "request": {
        "method": "GET",
        "path": "/pet"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "petType": "Spider"
        }
      }
    },
    {
      "description": "should error with invalid response",
      "request": {
        "method": "GET",
        "path": "/animal"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "name": "name",
          "detail": null
        }
      }
    }
  ]
}
